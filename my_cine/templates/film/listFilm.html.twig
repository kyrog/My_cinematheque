{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
      <div class="jumbotron">
        <h1 class="display-3">Liste des Film</h1>
        <p class="lead">détail du Film</p>
      </div>

      <div class="row marketing">
        <div class="col-lg-12">
        <table class="table table-dark">
            <thead>
                <tr>
                <th scope="col">titre</th>
                <th scope="col">resume</th>
                <th scope="col">durée</th>
                <th scope="col">date de sortie</th>
                <th scope="col">genre</th>

                </tr>
            </thead>
            <tbody>
            {% for film in films %}
                    <tr>
                        <th scope="row"><a href="{{ path("show_film", {"id":film.id}) }}">{{ film.titre }}</a> </th>
                        <td>{{ film.resume }}</td>
                        <td>{{ film.dureemin }}</td>
                        <td>{{ film.sortie | date('d/m/y') }}</td>
                        <td>{{ film.genre.nom }}</td>
                    </tr>
            {% endfor %}
            </tbody>
            </table>
            <div>
                {{ knp_pagination_render(films) }}
            </div>
        </div>


    </div> <!-- /container -->
{% endblock %}